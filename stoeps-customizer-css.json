{
    "name": "CSS Customizations",
    "title": "Fixing tiny annoying things",
    "description": "Adding some css to fix the most annoying things..",
    "services": [
        "Customizer"
    ],
    "extensions": [
        {
            "name": "Blogs",
            "type": "com.ibm.customizer.ui",
            "payload": {
                "include-files": [
                    "stoeps-customizer-css/blogs.css"
                ],
                "cache-headers": {
                    "cache-control": "max-age=0"
                }
            },
            "path": "blogs",
            "state": "enabled"
        },
        {
            "name": "Boards Ads",
            "type": "com.ibm.customizer.ui",
            "payload": {
                "match": {
                    "user-email": [
                        "jjones5@stoeps.home",
                        "jjones6@stoeps.home"
                    ]
                },
                "include-files": [
                    "stoeps-customizer-css/boards.css"
                ],
                "cache-headers": {
                    "cache-control": "max-age=0"
                }
            },
            "path": "boards",
            "state": "enabled"
        },
        {
            "name": "TE Wizard",
            "type": "com.ibm.customizer.ui",
            "payload": {
                "exclude": {
                    "user-email": [
                        "jjones2@stoeps.home",
                        "jjones1@stoeps.home"
                    ]
                },
                "include-files": [
                    "stoeps-customizer-css/te-wizard.css"
                ],
                "cache-headers": {
                    "cache-control": "max-age=0"
                }
            },
            "path": "te-creation-wizard",
            "state": "enabled"
        }
    ]
}
