{
    "name": "CSS Customizations",
    "title": "Fixing tiny annoying things",
    "description": "Adding some css to fix the most annoying things..",
    "services": [
        "Connections",
        "Customizer"
    ],
    "extensions": [
        {
            "name": "Blogs",
            "type": "com.ibm.customizer.ui",
            "payload": {
                "include-files": [
                    "stoeps-customizer-css/blogs.css"
                ],
                "cache-headers": {
                    "cache-control": "max-age=0"
                }
            },
            "path": "blogs",
            "state": "enabled"
        },
        {
            "name": "Boards Ads",
            "type": "com.ibm.customizer.ui",
            "payload": {
                "match": {
                    "user-email": [
                        "jjones5@stoeps.home",
                        "jjones6@stoeps.home"
                    ]
                },
                "include-files": [
                    "stoeps-customizer-css/boards.css"
                ],
                "cache-headers": {
                    "cache-control": "max-age=0"
                }
            },
            "path": "boards",
            "state": "disabled"
        },
        {
            "name": "TE Wizard",
            "type": "com.ibm.customizer.ui",
            "payload": {
                "exclude": {
                    "user-email": [
                        "jjones2@stoeps.home",
                        "jjones1@stoeps.home"
                    ]
                },
                "include-files": [
                    "stoeps-customizer-css/te-wizard.css"
                ],
                "cache-headers": {
                    "cache-control": "max-age=0"
                }
            },
            "path": "te-creation-wizard",
            "state": "disabled"
        },
        {
            "name": "Top Navigation Logo",
            "type": "com.hcl.connections.custom.style",
            "payload": {
                "style-customization": {
                    "generic": {
                        "--color-header": "#3A5412",
                        "--color-navigation": "#3A5412",
                        "--color-navigation-selected": "#1D2A09",
                        "--color-tertiary-navigation": "#3A5412",
                        "--color-tertiary-navigation-selected": "#1D2A09",
                        "--color-footer": "#3A5412",
                        "--color-button": "#3A5412",
                        "--color-button-hover": "#1D2A09",
                        "--color-link": "#3A5412",
                        "--color-link-hover": "#1D2A09",
                        "--color-third-navigation-text": "#3A5412",
                        "--color-third-navigation-selected": "#1D2A09"
                    },
                    "top-navigation": {
                        "logo": {
                            "order": "1",
                            "src": "/files/customizer/stoeps-customizer-css/logo-white.png"
                        }
                    }
                },
                "cache-headers": {
                    "cache-control": "max-age=0"
                }
            },
            "path": "global"
        }
    ]
}
